
<div class="devise-container">
  <h2 class="devise-header">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "devise-form" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send me reset password instructions", class: "devise-button" %>
    </div>
  <% end %>

  <div class="sharedlink">
    <%= render "devise/shared/links" %>
  </div>
</div>
